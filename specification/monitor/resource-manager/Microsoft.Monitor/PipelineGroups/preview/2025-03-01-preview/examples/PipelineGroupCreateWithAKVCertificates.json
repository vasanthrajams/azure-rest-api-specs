              ],
              "processors": [
                "batch-processor1"
              ],
              "exporters": [
                "secure-production-exporter"
              ]
            }
          ]
        },
        "tlsConfigurations": [
          {
            "name": "akv-mtls-config",
            "mode": "mutualTls",
            "tlsCertificate": {
              "certificate": {
                "type": "kubernetesSecret",
                "location": "akv-synced-tls-cert",
                "subLocation": "tls.pem"
              },
              "privateKey": {
                "type": "kubernetesSecret",
                "location": "akv-synced-tls-cert",
                "subLocation": "tls.pem"
              }
            },
            "clientCa": {
              "type": "kubernetesSecret",
