                "dataCollectionRule": "dcr-00000000000000000000000000000000",
                "schema": {
                  "recordMap": [
                    {
                      "from": "severity_text",
                      "to": "SeverityText"
                    },
                    {
                      "from": "body",
                      "to": "Body"
                    },
                    {
                      "from": "time_unix_nano",
                      "to": "TimeGenerated"
                    },
