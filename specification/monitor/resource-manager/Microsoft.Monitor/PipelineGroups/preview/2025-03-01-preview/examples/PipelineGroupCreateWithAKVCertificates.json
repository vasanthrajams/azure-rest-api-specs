                      "from": "resource.service.name",
                      "to": "ServiceName"
                    },
                    {
                      "from": "SecurityLevel",
                      "to": "SecurityLevel"
                    },
                    {
                      "from": "CertificateSource",
                      "to": "CertificateSource"
                    }
                  ]
